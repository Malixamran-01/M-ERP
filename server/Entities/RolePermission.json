{
  "name": "RolePermission",
  "description": "Many-to-many relationship between roles and permissions",
  "fields": {
    "id": {
      "type": "string",
      "required": true,
      "description": "Unique relationship identifier"
    },
    "role_id": {
      "type": "string",
      "required": true,
      "description": "Role ID"
    },
    "permission_id": {
      "type": "string",
      "required": true,
      "description": "Permission ID"
    },
    "granted_date": {
      "type": "string",
      "required": true,
      "description": "When this permission was granted to the role"
    },
    "granted_by": {
      "type": "string",
      "required": false,
      "description": "User ID who granted this permission"
    },
    "is_inherited": {
      "type": "boolean",
      "required": false,
      "default": false,
      "description": "Whether this permission is inherited from another role"
    },
    "inherited_from_role_id": {
      "type": "string",
      "required": false,
      "description": "Role ID this permission was inherited from"
    },
    "status": {
      "type": "string",
      "required": true,
      "default": "active",
      "enum": ["active", "revoked"],
      "description": "Permission status for this role"
    }
  },
  "indexes": ["role_id", "permission_id", "status"],
  "unique_constraints": ["role_id", "permission_id"],
  "relationships": {
    "role": {
      "type": "many-to-one",
      "entity": "Role",
      "foreign_key": "role_id",
      "description": "The role this permission belongs to"
    },
    "permission": {
      "type": "many-to-one",
      "entity": "Permission",
      "foreign_key": "permission_id",
      "description": "The permission being granted"
    }
  }
}



