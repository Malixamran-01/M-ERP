{
    "name": "Teacher",
    "type": "object",
    "properties": {
      "employee_id": {
        "type": "string",
        "description": "Unique employee identification number"
      },
      "first_name": {
        "type": "string",
        "description": "Teacher's first name"
      },
      "last_name": {
        "type": "string",
        "description": "Teacher's last name"
      },
      "phone": {
        "type": "string",
        "description": "Teacher's contact number"
      },
      "email": {
        "type": "string",
        "format": "email",
        "description": "Teacher's email address"
      },
      "position": {
        "type": "string",
        "enum": [
          "teacher",
          "senior_teacher",
          "head_teacher",
          "principal"
        ],
        "description": "Teaching position"
      },
      "subjects": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "description": "Subjects taught by the teacher"
      },
      "classes_assigned": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "description": "Classes assigned to teach"
      },
      "hire_date": {
        "type": "string",
        "format": "date",
        "description": "Date of hiring"
      },
      "salary": {
        "type": "number",
        "description": "Monthly salary"
      },
      "qualifications": {
        "type": "string",
        "description": "Educational qualifications"
      },
      "status": {
        "type": "string",
        "enum": [
          "active",
          "inactive",
          "on_leave"
        ],
        "default": "active",
        "description": "Employment status"
      }
    },
    "required": [
      "first_name",
      "last_name",
      "employee_id",
      "position"
    ]
  }