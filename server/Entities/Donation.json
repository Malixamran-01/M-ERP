{
    "name": "Donation",
    "type": "object",
    "properties": {
      "donor_name": {
        "type": "string",
        "description": "Name of the donor"
      },
      "donor_phone": {
        "type": "string",
        "description": "Donor's contact number"
      },
      "donor_email": {
        "type": "string",
        "format": "email",
        "description": "Donor's email address"
      },
      "amount": {
        "type": "number",
        "description": "Donation amount"
      },
      "donation_type": {
        "type": "string",
        "enum": [
          "zakat",
          "sadaqah",
          "general",
          "construction",
          "scholarship",
          "iftar",
          "other"
        ],
        "description": "Type of donation"
      },
      "payment_method": {
        "type": "string",
        "enum": [
          "cash",
          "bank_transfer",
          "cheque",
          "online"
        ],
        "description": "Method of payment"
      },
      "donation_date": {
        "type": "string",
        "format": "date",
        "description": "Date of donation"
      },
      "receipt_number": {
        "type": "string",
        "description": "Receipt number"
      },
      "purpose": {
        "type": "string",
        "description": "Specific purpose of donation"
      },
      "is_recurring": {
        "type": "boolean",
        "default": false,
        "description": "Whether this is a recurring donation"
      },
      "notes": {
        "type": "string",
        "description": "Additional notes"
      }
    },
    "required": [
      "donor_name",
      "amount",
      "donation_type",
      "donation_date"
    ]
  }