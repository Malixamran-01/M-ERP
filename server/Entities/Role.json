{
  "name": "Role",
  "description": "Role entity for RBAC system",
  "fields": {
    "id": {
      "type": "string",
      "required": true,
      "description": "Unique role identifier"
    },
    "name": {
      "type": "string",
      "required": true,
      "description": "Human-readable role name"
    },
    "description": {
      "type": "string",
      "required": false,
      "description": "Role description"
    },
    "color": {
      "type": "string",
      "required": true,
      "description": "Role color for UI display"
    },
    "isRootRole": {
      "type": "boolean",
      "required": false,
      "default": false,
      "description": "Whether this is a root role (cannot be deleted)"
    },
    "inheritsFrom": {
      "type": "array",
      "required": false,
      "default": [],
      "description": "Array of role IDs this role inherits from"
    },
    "departments": {
      "type": "array",
      "required": false,
      "default": [],
      "description": "Array of department IDs this role has access to"
    },
    "created_date": {
      "type": "string",
      "required": true,
      "description": "Role creation timestamp"
    },
    "updated_date": {
      "type": "string",
      "required": true,
      "description": "Role last update timestamp"
    },
    "created_by": {
      "type": "string",
      "required": false,
      "description": "User ID who created this role"
    },
    "status": {
      "type": "string",
      "required": true,
      "default": "active",
      "enum": ["active", "inactive", "archived"],
      "description": "Role status"
    }
  },
  "indexes": ["id", "name", "status"],
  "relationships": {
    "permissions": {
      "type": "many-to-many",
      "entity": "RolePermission",
      "description": "Permissions assigned to this role"
    },
    "users": {
      "type": "many-to-many",
      "entity": "UserRole",
      "description": "Users assigned to this role"
    }
  }
}



